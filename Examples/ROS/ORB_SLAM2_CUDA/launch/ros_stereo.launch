<?xml version="1.0"?>
<launch>
    <arg name="vocabularty_path" default="$(find ORB_SLAM2_CUDA)/../../../Vocabulary/ORBvoc.txt" />
    <arg name="camera_setting_path" default="$(find ORB_SLAM2_CUDA)/conf/IDScam.yaml" />
    <arg name="bUseViewer" default="false" />
    <arg name="bEnablePublishROSTopic" default="true" />

    <node pkg="nodelet" type="nodelet" name="ros_stereo_nodelet_manager"  args="manager" output="screen"/>  
  
     <node pkg="nodelet" type="nodelet"  args="load ORB_SLAM2_CUDA/ImageGrabberNodelet ros_stereo_nodelet_manager">
        <remap from="image_raw" to="image"/>
    </node>

    <node pkg="ORB_SLAM2_CUDA" pkg="ORB_SLAM2_CUDA" type="Mono" output="screen" 
    	args="$(arg vocabularty_path) $(arg camera_setting_path) $(arg bUseViewer) $(arg bEnablePublishROSTopic)">
      <remap from="/camera/image_raw" to="/cam0/image_raw" />
    </node>

</launch>

